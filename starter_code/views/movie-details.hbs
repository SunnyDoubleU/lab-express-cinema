<!--movie-details-->

<div id="movieDetailsRow">
    <<img src="/{{movie.image}}" alt="">>
        <div id="movieDetailsColumn">
            <a href="/movie">Go Back</a>
            <h1>{{movie.title}}</h1>
            <h2>Director: {{movie.director.name}}</h2>
            <ul>
                <li class="listTitle">Stars</li>
                {{#each movie.stars}}
                <li>{{this}}</li>
                {{/each}}
            </ul>

            <p>{{movie.description}}</p>
            <ul class="showtimes">
                {{#each movie.showtimes}}
                <li>{{this}} |</li>
                {{/each}}
            </ul>
            <a href="/movies/delete?movieId={{movie._id}}">Boring movie, delete!</a>
            <a href="/movies/update?movieId={{movie._id}}">Update</a>
        </div>
</div>